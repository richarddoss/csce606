<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        
        <%= gravatar_for @user %>
        <%= @user.name %>
        
      </h1>
    </section>
  </aside>
</div>

 <div class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Poller', user_path(:id), class: 'navbar-brand' %>
    </div>
    <ul class="nav navbar-nav">
      <li><%= link_to 'Add poll', new_user_poll_path(params[:id]) %></li>
    </ul>
  </div>
    </div>
    <ul class="nav navbar-nav">
      <li><%= link_to 'Click to Answer Polls', user_polls_path(params[:id]) %></li>
    </ul>
  </div>
</div>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>

  <div class="page-header">
    <h1><%= yield :page_header %></h1>
  </div>

  <%= yield %>
</div>